<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".Activities.AppointmentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/action_bar"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="2dp"
            android:src="@drawable/appointment"
            android:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/poppins_medium"
            android:text="Appointments"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/appointment" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Appointment " />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:outlineSpotShadowColor="@color/blue"
                    android:background="@drawable/circle_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:layout_marginLeft="5dp"
                    android:padding="4dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Permission For Peace Ralley"
                android:fontFamily="@font/poppins_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetv"
                    android:text="01/02/2020 "
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAR No: "
                    android:textColor="@color/grey"
                    android:fontFamily="@font/poppins_medium" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8222451165"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Authority"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Authority "
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/authoritytv"
                        android:text="Inspector"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Personnel Name"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorityname"
                        android:text="Mr.Ashok Kumar"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_tv"
                        android:text="26/01/2020"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/timetv"
                        android:text="23:00"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Person Details"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name "
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rahul Sharma"
                        android:id="@+id/nametv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gender "
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:id="@+id/gendertv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Age " />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:id="@+id/age_tv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Number"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="524678524568"
                        android:id="@+id/aadhartv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email Id "
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="abc@gmail.com"
                        android:id="@+id/emailtv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile No. "
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="8245565465"
                        android:id="@+id/mob"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To Hold A Peace Ralley"
                        android:id="@+id/destv"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>





                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/remarkss"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Remarks">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDescription"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>
                <LinearLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/select"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:orientation="vertical">


                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/approval_arrays"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_appoint_sub"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="48dp"
                    android:padding="8dp"
                    android:text="Submit"
                    app:cornerRadius="25dp" />






            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>



</LinearLayout>